 class Solution{
public:
	
	int findMaximum(int arr[], int n) {
	  
	   int s=0,e=n-1;
	   int mid=s+(e-s)/2;
	   while(s<=e){
	      
	       if(arr[mid]>arr[mid+1] && arr[mid]>arr[mid-1])
	       {
	           return arr[mid];
	           
	       }
	       else if(arr[mid]>arr[mid-1]){
	         s=mid+1;
	        
	       }
	       else{
	           e=mid-1;
	       }
	       mid=s+(e-s)/2;
	   }
	 
	    }
	};
